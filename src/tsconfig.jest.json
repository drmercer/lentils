{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "preserveWatchOutput": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "outDir": "../built/",
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "./**/*.spec.ts",
  ]
}
